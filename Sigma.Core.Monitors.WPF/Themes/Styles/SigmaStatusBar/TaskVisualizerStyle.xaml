<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:statusBar="clr-namespace:Sigma.Core.Monitors.WPF.View.CustomControls.StatusBar">

	<Style TargetType="statusBar:TaskVisualizer">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="ProgressColorBrush" Value="{DynamicResource AccentSelectedColorBrush}"/>
		<Setter Property="TextColorBrush" Value="{DynamicResource AccentSelectedColorBrush}"/>
		<Setter Property="FontSize" Value="{DynamicResource P1}"/>
	</Style>

	<Style x:Key="ShowMoreIndicator"  TargetType="{x:Type Label}">
		<Setter Property="FontSize" Value="{DynamicResource P1}"/>
		<Setter Property="Foreground" Value="{DynamicResource AccentSelectedColorBrush}"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

</ResourceDictionary>