<UserControl x:Class="Sigma.Core.Monitors.WPF.Control.Factories.Defaults.StatusBar.StatusBarLegend"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DesignHeight="32" d:DesignWidth="90">

	<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
		<Rectangle Height="{Binding Size, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="{Binding Size, RelativeSource={RelativeSource AncestorType=UserControl}}" Fill="{Binding LegendColour, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
		<Label Foreground="{Binding LabelColour, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="{Binding FontSize}" Content="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
	</StackPanel>
</UserControl>
